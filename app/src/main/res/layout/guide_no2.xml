<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:clickable="false"
    android:focusable="false">

    <LinearLayout
    android:id="@+id/guide_no2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bocadillo"
        android:padding="16dp"
        android:elevation="8dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/txtPersonajesInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aquí podrás explorar a todos los personajes del mundo de Spyro."
            android:textSize="18sp"
            android:textColor="@android:color/black"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
        <Button
            android:id="@+id/btnNextStep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:onClick="onNextGuideStep"
            android:text="Siguiente"
            android:layout_marginEnd="100dp"/>

        <Button
            android:id="@+id/btnSkipGuide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSkipGuide"
            android:text="Saltar Guía"
            android:layout_marginEnd="16dp"/>
</LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/pulse_guide2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="-80dp"
        android:layout_marginBottom="-70dp"
        android:layout_gravity="start|bottom"
        android:src="@drawable/pulse" />
</FrameLayout>